{
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],

  "clearMocks": true,

  "collectCoverage": true,

  "coverageDirectory": "coverage",

  "collectCoverageFrom": ["**/*.ts", "!jest.config.js", "!coverage/**/*.js", "!lib/**/*.(js|ts)"]
}
